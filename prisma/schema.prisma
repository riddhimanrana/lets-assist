generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @map("_id")
  name      String?
  email     String   @unique
  createdAt DateTime @default(now())
}

model Opportunity {
  id         Int     @id @map("_id")
  title      String?
  hostUserId Int
}